@model CollectionViewModel

<div class="container-xl">

    <div class="flex-column align-items-center my-4">
        <h1 class="d-flex justify-content-center">@Model.Title</h1>
        <div class="d-flex justify-content-center">
            @using (Html.BeginForm())
            {
                @Html.ActionLink("Featured /","Index","Home", new {filter = "featured"}, null)
                @Html.ActionLink("New /","Index","Home", new {filter = "new"}, null)
                @Html.ActionLink("Hot","Index","Home", new {filter = "hot"}, null)

                
            }
        </div>
    </div>
        <div class="row gx-2 align-items-evenly justify-content-start gap mb-14" >
            @foreach(var item in Model.Items)
            {

                <div class="card col-4 m-2" style="min-height: 16rem; max-width: 25rem ;">
                        <div class="d-inline-flex justify-content-center bg-image hover-overlay ripple" data-mdb-ripple-color="light" style="height:12rem;">
                       
                           <img src="@item.ImageURL" style="max-width:30rem !important;">
                        @*<a href="#!">
                            <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
                        </a>*@
                        </div>
                        <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@item.ProductName</h5>
                        <p class="card-text">@item.Ingress</p>
                        <p class="card-text">@item.Description</p>

                    <a class="btn" asp-action="Details" asp-controller="Products" asp-route-articleNumber="@item.ArticleNumber" style="background-color: #6200EA; color:white;">
                            Learn more
                        </a>
                        
                        </div>
                    </div>
            }
        </div>
</div>
