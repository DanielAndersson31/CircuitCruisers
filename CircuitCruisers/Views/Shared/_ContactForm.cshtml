@model ContactFormViewModel

<div class="container">
        <form class="m-5" method="post" asp-action="Index" asp-controller="Contacts" novalidate>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="small text-dang"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Email" class="form-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="small text-dang"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Message" class="form-label">Message</label>
                <textarea asp-for="Message" class="form-control" rows="5">Message...</textarea>
                <span asp-validation-for="Message" class="small text-dang"></span>
            </div>
            <div class="mt-4">
                <button class="btn" style="background-color: #6200EA; color:white;" >SUBMIT</button>
            </div>
        </form>
</div>