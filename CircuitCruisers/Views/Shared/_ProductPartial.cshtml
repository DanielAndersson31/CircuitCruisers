@model Product

<div class="container">
    <div class="d-flex flex-row card mt-5 justify-content-center">
        <div class="bg-image hover-overlay ripple" data-mdb-ripple-color="light">
            <img src="https://mdbcdn.b-cdn.net/img/new/standard/nature/111.webp" />
            <a href="#!">
                <div class="mask" style="background-color: rgba(251, 251, 251, 0.15);"></div>
            </a>
        </div>
        <div class="d-flex flex-column justify-content-evenly card-body">
            <h5 class="card-title">@Model.ProductName</h5>
            <p class="card-text">@Model.Description</p>
            <a href="#!" class="btn btn-primary">Add to cart</a>
        </div>
    </div>

</div>