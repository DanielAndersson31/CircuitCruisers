@model UserRegisterViewModel

@{
    ViewData["Title"] = "Create a new Account";
}

<section class="login-form mb-14">
    <div class="container-sm" style="max-width: 30rem">
        <div class="title h2 my-5 text-center">@ViewData["Title"]</div>

        <form method="post" enctype="multipart/form-data" novalidate>
            <div asp-validation-summary="ModelOnly" class="form-group"></div>

        <div class="row">
            <div class="col-md-6 mb-4">
                <div class="form-outline">
                    <input asp-for="FirstName" class="form-control" />
                    <label asp-for="FirstName" class="form-label">First Name</label>
                </div>
                <span asp-validation-for="FirstName" class="error text-danger"></span>
            </div>
            <div class=" col-md-6 mb-4">
                <div class="form-outline">
            <input asp-for="LastName" class="form-control" />
                    <label asp-for="LastName" class="form-label"></label>
                </div>
                <span asp-validation-for="LastName" class="error text-danger"></span>
            </div>
        </div>
   
            <div class=" mb-4">
                <div class="form-outline">
                    <input asp-for="StreetName" class="form-control" />
                    <label asp-for="StreetName" class="form-label"></label>
                </div>          
                <span asp-validation-for="StreetName" class="error text-danger"></span>
                
            </div>

            <div class="row">
                 <div class="col-md-8 mb-4">
                     <div class="form-outline">
                        <input asp-for="City" class="form-control" />
                        <label asp-for="City" class="form-label"></label>
                    </div>          
                    <span asp-validation-for="City" class="error text-danger"></span>

                </div>
                <div class="col-md-4 mb-4">
                     <div class="form-outline">
                        <input asp-for="PostalCode" class="form-control" />
                        <label asp-for="PostalCode" class="form-label"></label>
                    </div>          
                    <span asp-validation-for="PostalCode" class="error text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6 mb-4">

                <div class="form-outline">
                    <input asp-for="Mobile" class="form-control" />
                    <label asp-for="Mobile" class="form-label"></label>
                </div>
                    <span asp-validation-for="Mobile" class="error text-danger"></span>
            </div>
            <div class="col-md-6 mb-4">

                <div class="form-outline">
                    <input asp-for="Company" class="form-control" />
                    <label asp-for="Company" class="form-label"></label>
                </div>          
                <span asp-validation-for="Company" class="error text-danger"></span>
            </div>
            </div>
            <div class="mb-4">
                <div class="form-outline">
                    <input asp-for="Email" class="form-control" />
                    <label asp-for="Email" class="form-label"></label>
                </div>          
                <span asp-validation-for="Email" class="error text-danger"></span>
            </div>
            <div class="mb-4">

                <div class="form-outline">
                    <input asp-for="Password" class="form-control" />
                    <label asp-for="Password" class="form-label"></label>
                </div>
                <span asp-validation-for="Password" class="error text-danger"></span>
            </div>
            <div class="mb-4">

                <div class="form-outline">
                    <input asp-for="ConfirmPassword" class="form-control" />
                    <label asp-for="ConfirmPassword" class="form-label"></label>
                </div>
                <span asp-validation-for="ConfirmPassword" class="error text-danger"></span>
            </div>
            <div class="mb-4">
                <label asp-for="ImageFile" class="form-label"></label>
                <div class="form-outline">
                   
                    <input asp-for="ImageFile" class="form-control" />
                </div>
                <span asp-validation-for="ImageFile" class="error text-danger"></span>
            </div>
            <div class="mb-4">
                <div>
                    <input asp-for="TermsAndAgreement"  class="form-check-input"/>
                <label asp-for="TermsAndAgreement"></label>
                </div>
                <span asp-validation-for="TermsAndAgreement" class="error text-danger"></span>
            </div>
            
            
            <button class="btn btn-block mb-4" style="background-color: #6200EA; color:white;">Create Account</button>
        </form>
        
    </div>
</section>
