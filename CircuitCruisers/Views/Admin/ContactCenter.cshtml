@model SupportTicketsViewModel
@{
    ViewData["Title"] = "Contact Center";
}

<div class="container d-flex flex-column align-items-center mb-5 mt-5">
    <h1>@ViewData["Title"]</h1>

    <nav class="nav nav-pills flex-column flex-sm-row mb-5">
        <a asp-action="index" asp-controller="admin" class="flex-sm-fill text-sm-center nav-link">Dashboard</a>
        <a asp-action="products" asp-controller="admin" class="flex-sm-fill text-sm-center nav-link">Inventory</a>
        <a asp-action="contactcenter" asp-controller="admin" class="flex-sm-fill text-sm-center nav-link">Support Center</a>
        <a class="flex-sm-fill text-sm-center nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Admin</a>
    </nav>

    <table class="table align-middle mb-0 bg-white">
        <thead class="bg-light">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Message</th>
                <th>Created</th>
                <th>Actions</th>
            </tr>
        </thead>
        
            @foreach (var ticket in Model.Tickets)
            {
            <tbody>
                <tr>
                    <td>
                        <p class="fw-bold mb-1"></p>
                        <p class="text-muted fw-bold mb-0">@ticket.Name</p>
                    </td>

                    <td>
                        <p class="text-muted mb-0">@ticket.Email</p>
                    </td>

                    <td>
                        <p class="text-muted mb-0" style="max-width: 15rem;">@ticket.Message</p>
                    </td>

                    <td>
                        <p class="text-muted fw-bold mb-0">@ticket.Created</p>
                    </td>

                    <td>
                        <a asp-action="index" asp-controller="underdevelopment" class="btn btn-link btn-sm btn-rounded"> Edit </a>
                         
                    </td>
                </tr>

            </tbody>
            }
        
    </table>

   
</div>
